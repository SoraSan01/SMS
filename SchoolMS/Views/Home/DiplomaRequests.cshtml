@{
    ViewData["Title"] = "Diploma Request Dashboard";
}

<style>
    .table-responsive {
        overflow-y: auto;
    }

        .table-responsive table {
            border-collapse: separate;
            border-spacing: 0;
            width: 100%; /* Ensures the table takes full width */
        }

        .table-responsive thead {
            display: table;
            width: 100%;
            table-layout: fixed;
        }

        .table-responsive tbody {
            display: block;
            height: 300px; /* Adjust the height to your needs */
            overflow-y: auto;
        }

        .table-responsive tr {
            display: table;
            table-layout: fixed;
            width: 100%;
        }

        .table-responsive td,
        .table-responsive th {
            width: 20%; /* You can adjust the width to your needs */
        }

        /* Additional styles for wider table */
        .table-responsive td,
        .table-responsive th {
            padding: 0.75rem; /* Add some padding for better spacing */
        }

    .btn-group {
        display: flex;
        justify-content: space-between; /* Adjust button alignment */
    }
</style>

<div class="text-center">
    <div class="container-fluid">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">Request List</h2>
            </div>
            <div class="col-6 text-end">
                <div class="input-group mb-3">
                    <input type="text" class="form-control" placeholder="Search...">
                    <button class="btn btn-primary" type="button">
                        <i class="bi bi-search"></i>
                    </button>
                    <a asp-controller="YourControllerName" asp-action="YourActionName" class="btn btn-primary ms-2">
                        <i class="bi bi-plus-square-fill"></i>
                        Add Professors
                    </a>
                </div>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-hover table-dark table-sm">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">File</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 1; i <= 20; i++)
                    {
                        <tr @("class=table-light")>
                            <th scope="row">@i</th>
                            <td>John Doe @i</td>
                            <td>johndoe@example.com @i</td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-primary" style="width:49%; margin-right: 2px;">Add File</button>
                                </div>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <button type="button" class="btn btn-success" style="width:49%; margin-right: 2px;">Send</button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>